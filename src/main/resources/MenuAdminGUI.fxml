<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUIs.controladores.ControladorMenuAdminGUI" stylesheets="@estiloslogin.css"
            styleClass="border-pane" prefHeight="600.0" prefWidth="900.0">

   <top>
      <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1A73E8; -fx-padding: 20;">
         <Label text="Menú de Administrador" styleClass="label-titulo" style="-fx-text-fill: white;"/>
         <Label text="Sistema de Gestión Veterinaria" styleClass="label-subtitulo" style="-fx-text-fill: #E8F0FE;"/>
      </VBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="40" style="-fx-padding: 20;">
         <Button text="Registrar Usuario" onAction="#abrirGestionVeterinario"
                 styleClass="button-large" style="-fx-font-size: 16px;" prefWidth="350" prefHeight="80">
            <graphic>
               <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                  <image>
                     <Image url="https://culturesync.net/wp-content/uploads/2018/12/icon-assessment@2x.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>


         <VBox visible="false" managed="false">
            <Button text="Botón futuro 1" />
            <Button text="Botón futuro 2" />
         </VBox>
      </VBox>
   </center>

   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #F1F3F4; -fx-padding: 15;">
         <Label text="© 2023 Sistema de Gestión Veterinaria - Área de Administración"
                style="-fx-text-fill: #5F6368; -fx-font-size: 12px;"/>
      </HBox>
   </bottom>
</BorderPane>