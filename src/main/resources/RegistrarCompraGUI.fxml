<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUIs.controladores.RegistrarCompraController"
            stylesheets="@estiloslogin.css"
            prefHeight="350.0" prefWidth="450.0">

    <!-- Panel principal con sombra -->
    <VBox layoutX="25.0" layoutY="25.0" spacing="20" prefHeight="300.0" prefWidth="400.0"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-padding: 20;">

        <!-- Encabezado -->
        <Label text="Registrar Nueva Compra" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

        <!-- Campos del formulario -->
        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0"/>
            </columnConstraints>

            <!-- Fila 1: ID Producto -->
            <Label text="ID Producto:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="idProductoTX" promptText="Ingrese ID del producto" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Fila 2: ID Dueño -->
            <Label text="ID Dueño:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="idDuenoTX" promptText="Ingrese ID del dueño" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Fila 3: Fecha -->
            <Label text="Fecha:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="fechaPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Botón y mensaje -->
        <VBox spacing="10">
            <Button fx:id="registrarBtn" text="Registrar Compra" onAction="#registrarCompra"
                    style="-fx-font-size: 14; -fx-pref-width: 200; -fx-pref-height: 35; -fx-background-color: #4a6fa5; -fx-text-fill: white;"/>

            <!-- Panel de mensajes -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-radius: 5;">
                <Label fx:id="mensajeLB" style="-fx-font-size: 14; -fx-text-fill: #4a6fa5; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>

        <!-- Información adicional -->
        <Label text="Esta acción registrará una nueva compra en el sistema."
               style="-fx-font-size: 12; -fx-text-fill: #666; -fx-wrap-text: true;"/>
    </VBox>
</AnchorPane>